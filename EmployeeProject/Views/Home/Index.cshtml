@model IEnumerable<Employment.Models.AllEmployee>
<html>

<head>
    <title>Employee Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>
    <div class="container" style="margin: auto;margin-top: 100px;width: 100%">
        <br>
        <div style="width: 700px; height: auto;margin: auto;">
            <h2>Employee Details</h2>
            <table style="font-size: larger;text-align: center;" class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Department</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr scope="row">
                            <td>@employee.Id</td>
                            <td>@employee.Name</td>
                            <td>@employee.Salary</td>
                            <td>@employee.Department</td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>
              <a type="button" href="/Home/Register" class=" btn btn-primary">Register as an Employee</a>
            </p>
        </div>
    </div>
</body>
<script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</script>

</html>